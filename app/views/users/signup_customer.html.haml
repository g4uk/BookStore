%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t(:sign_up)
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official
    %p.general-login-text= t(:or)
  = form_for(:user, url: registration_path(:user), html: { class: 'general-form' }) do |f|
    - flash.each do |name, msg|
      - if msg.class == Array
        - msg.each do |message|
          = content_tag :div, message, :id => "flash_#{name}"
    .form-group.mb-30
      = f.label :email, t(:enter_email), class: 'control-label input-label'
      = f.text_field :email, class: 'form-control'
    .form-group.mb-30
      = f.label :password, class: 'control-label input-label'
      = f.password_field :password, class: 'form-control'
    .form-group.mb-30
      = f.label :password_confirmation, class: 'control-label input-label'
      = f.password_field :password_confirmation, class: 'form-control'
    .text-center
      = f.submit class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    have an Account?
    = link_to t(:log_in), login_customer_users_path, class: 'in-gold-500'