%main.container
  %h1.general-title-margin= t(:settings)
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"} Address
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"} Privacy
  .tab-content
    #address.tab-pane.fade.in.active{role: "tabpanel"}
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0= t(:billing_address)
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0= t(:shipping_address)
      .row
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t(:billing_address)
          #edit_billing_address_form_wrapper
            = render 'form', address: :billing_address, countries_with_codes: @countries_with_codes
        .col-md-5.col-md-offset-1.mb-25
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t(:shipping_address)
          #edit_shipping_address_form_wrapper
            = render 'form', address: :shipping_address, countries_with_codes: @countries_with_codes
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        .col-sm-5
          %p.in-gold-500.font-18.mb-25= t(:email)
          #edit_email_form_wrapper
            = render 'email_form'
        .col-sm-5.col-sm-offset-1
          %p.in-gold-500.font-18.mb-25= t(:password)
          #edit_password_form_wrapper
            = render 'password_form'
        .col-sm-12
          %p.in-gold-500.font-18.mb-25= t('.remove_account')
          %form
            .general-settings-btn
              = link_to t('.please_remove_account'), user_path(@user), method: :delete, class: 'btn disabled mb-20 delete-user'
            .form-group.checkbox.general-settings-checkbox
              %label.checkbox-label
                %input.checkbox-input.checkbox-delete-user{type: "checkbox", hidden: "true"}
                %span.checkbox-icon
                  %i.fa.fa-check
                %span.checkbox-text= t('.aggrement')
