<% if @billing_form %>
  billingAddressForm = $('#edit_billing_address_form_wrapper');
  billingAddressForm.html("<%= j render partial: 'form', locals: {type: 'billing'} %>")
  billingAddressForm.find('.flash_message').html("<%= j t(:updated_sucessfully) %>");
<% else %>
  shippinhAddressForm = $('#edit_shipping_address_form_wrapper');
  shippinhAddressForm.html("<%= j render partial: 'form', locals: {type: 'shipping'} %>")
  shippinhAddressForm.find('.flash_message').html("<%= j t(:updated_sucessfully) %>");
<% end %>
