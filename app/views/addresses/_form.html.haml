.visible-xs.visible-sm
  %h3.general-subtitle= t(:billing_address)
  %p.general-info-text all fields are required
.form-group
  = f.label :first_name, class: 'control-label input-label'
  = f.text_field :first_name, id: 'firstName', class: 'form-control', placeholder: true
.form-group
  = f.label :last_name, class: 'control-label input-label'
  = f.text_field :last_name, id: 'lastName', class: 'form-control', placeholder: true
.form-group
  = f.label :address, class: 'control-label input-label'
  = f.text_field :address, id: 'address', class: 'form-control', placeholder: true
.form-group
  = f.label :city, class: 'control-label input-label'
  = f.text_field :city, id: 'city', class: 'form-control', placeholder: true
.form-group
  = f.label :zip, class: 'control-label input-label'
  = f.text_field :zip, id: 'zip', class: 'form-control', placeholder: true
.form-group
  = f.label :country, class: 'control-label input-label'
  = f.text_field :country, id: 'country', class: 'form-control', placeholder: true
.form-group
  = f.label :phone, class: 'control-label input-label'
  = f.text_field :phone, id: 'phone', class: 'form-control', type: 'tel', placeholder: true