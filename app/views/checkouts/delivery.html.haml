%main.container.general-main-wrap
  = render partial: 'progress_bar'
  %h3.general-subtitle Credit Card
  .visible-xs
    .general-cart-item.divider-lg-bottom
      %table.table
        %tr
          %td.col-half
            %span.in-grey-600 Method
          %td.col-half
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                %input.radio-input{type: "radio", hidden: "true"}
                %span.radio-icon
                %span.radio-text Delivery Next Day!
        %tr
          %td
            %span.in-grey-600 Days
          %td
            %span.font-16.fw-300 3 to 7 days
        %tr
          %td
            %span.in-grey-600 Price
          %td
            %span.font-16.in-gold-500 €5.00
    .general-cart-item.divider-lg-bottom.mb-30
      %table.table
        %tr
          %td.col-half
            %span.in-grey-600 Method
          %td.col-half
            .form-group.radio.mt-0.mb-0
              %label.radio-label
                %input.radio-input{type: "radio", hidden: "true"}
                %span.radio-icon
                %span.radio-text Delivery Next Day!
        %tr
          %td
            %span.in-grey-600 Days
          %td
            %span.font-16.fw-300 3 to 7 days
        %tr
          %td
            %span.in-grey-600 Price
          %td
            %span.font-16.in-gold-500 €5.00
  .hidden-xs.mb-res-50
    %table.table.table-hover
      %thead
        %tr
          %th.col-method
            %span.in-grey-600.ml-40 Method
          %th
            %span.in-grey-600 Days
          %th
            %span.in-grey-600 Price
      %tbody
        = form_for @order, url: wizard_path do |form|
          = form.collection_radio_buttons(:delivery_id, @deliveries, :id, :name, { checked: @deliveries.first.id }) do |button|
            %tr
              %td
                .form-group.radio.mt-0.mb-0
                  %label.radio-label
                    = button.label(class: 'radio-text') do
                      = button.radio_button(class: 'radio-input', hidden: 'true')
                      %span.radio-icon
                      %span.radio-text= button.text
              %td
                %span 3 to 7 days
              %td
                %span.font-16.in-gold-500 €28.50
          = form.submit
  .general-text-align
    = render partial: 'order_summary'
  .text-center
    %button.btn.btn-default.mb-20 Save and Continue