%main.container
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators
      %li.active{'data-target': "#slider", 'data-slide-to': "0"}
      %li{'data-target': "#slider", 'data-slide-to': "1"}
    .carousel-inner{role: "listbox"}
      - @latest_books.each do |book|
        .item{class: ('active' if book.equal? @latest_books.first)}
          .row
            .col-sm-5
              .general-img-wrap
                = image_tag book.main_image, class: 'img-shadow general-thumbnail-img', alt: 'design-book' if book.images.attached? 
            .col-sm-7
              .mb-60
                %h1= book.title
                %p.lead= book.carousel_description
                %p.lead.small= book.formatted_authors
                .general-align
                  = link_to t(:buy_now), create_order_item_path(book_id: book), class: 'btn btn-primary', remote: true
    %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
      %span.icon-prev{'aria-hidden': "true"}
      %span.sr-only Previous
    %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
      %span.icon-next{'aria-hidden': "true"}
      %span.sr-only Next
.container
  .jumbotron.text-center.mb-0
    %h2.h1 Welcome to our amazing Bookstore
    .mb-res-50
      %p We pore through hundreds of new books each month and select the five best we can find to share with our members.
    = link_to t(:get_started), books_path, class: 'btn btn-default'
  .mb-35
    %h3= t(:best_sellers)
    .row
      - @books.each do |book|
        .col-sm-6.col-md-3
          = render partial: 'books/book_photo', locals: {book: book}
          .mb-35
            .clearfix
              %p.pull-right.font-16.in-gold-500= book.formatted_price
              %p.title.mr-55= book.title
            %span.divider-sm
            %p.lead.small= book.formatted_authors