  .mb-120
    .row
      - @books.each do |book|
        .col-xs-6.col-sm-3
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              = image_tag book.try(:images).first.variant(resize: '100x100'), class: 'img-shadow general-thumbnail-img'
              .thumb-hover
                .general-thumb-link-wrap
                  = link_to book_path(book), class: 'thumb-hover-link' do
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  = link_to create_order_item_path(book_id: book), class: 'thumb-hover-link' do
                    %i.fa.fa-shopping-cart.thumb-icon
          .general-thumb-info
            %p.title= book.title
            %p.font-16.in-gold-500= book.price
            %span.divider-sm
            %p.lead.small= book.formatted_authors
    .text-center
      %button.btn.btn-primary View More
