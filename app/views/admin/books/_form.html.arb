# frozen_string_literal: true

f.semantic_errors
f.inputs except: :description
f.inputs do
  f.input :description, as: :quill_editor
  f.input :authors, as: :check_boxes, collection: Admin::AdminUtilsService.authors_with_ids
end
f.inputs do
  f.has_many :images, heading: 'Images. Only 4 allowed', allow_destroy: true do |image|
    if image.object.photo.attached?
      image.input :photo, as: :file, hint: image_tag(Admin::AdminUtilsService.book_image(image.object))
    else
      image.input :photo, as: :file
    end
  end
end
f.actions
