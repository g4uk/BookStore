.visible-xs
  - @order_items.each do |order_item|
    .general-cart-item.divider-lg-bottom.mb-30
      = link_to order_item_path(order_item), method: :delete, class: 'close general-cart-close', remote: true do
        %span{'aria-hidden': "true"} &times;
      .general-img-wrap-table
        = order_item.book_image('cart-img-shadow')
      %p.title= order_item.book_name
      %table.table
        %tr
          %td
            %span.in-grey-600= t(:price)
          %td
            %span.font-16.in-gold-500= order_item.book_price
        %tr
          %td.vertical-middle
            %span.in-grey-600= t(:quantity)
          %td
            = render 'carts/order_item_inputs', order_item: order_item
        %tr
          %td
            %span.in-grey-600= t(:subtotal)
          %td
            %span.font-16.in-gold-500= order_item.formatted_total
.hidden-xs
  %table.table.table-hover
    %tr.no-hover
      %th.col-pic.pl-0
        %span.in-grey-600= t(:product)
      %th.col-title
      %th.col-price
        %span.in-grey-600= t(:price)
      %th.col-quantity
        %span.in-grey-600= t(:quantity)
      %th.col-total
        %span.in-grey-600= t(:subtotal)
      %th.col-close
    - @order_items.each do |order_item|
      %tr
        %td
          .general-img-wrap-table
            = order_item.book_image('cart-img-shadow pull-left')
        %td
          %p.title= order_item.book_name
        %td
          %span.font-16.in-gold-500= order_item.formatted_book_price
        %td
          = render 'carts/order_item_inputs', order_item: order_item
        %td
          %span.font-16.in-gold-500= order_item.formatted_total
        %td
          = link_to order_item_path(order_item), method: :delete, class: 'close general-cart-close', remote: true do
            %span{'aria-hidden': "true"} &times;
.general-order-wrap
  .row
    .col-sm-4
      #coupon-wrapper
        = render 'carts/form'
    .col-sm-8
      .res-mr-200.text-center.general-text-right
        %p.in-gold-500.font-18= t(:order_summary)
        %table.general-summary-table.general-summary-table-right.general-text-right
          %tr
            %td
              %p.font-16= t(:subtotal)
            %td
              %p.font-16= @cart.formatted_subtotal
          %tr
            %td
              %p.font-16= t(:coupon)
            %td
              %p.font-16= @cart.formatted_discount
          %tr
            %td
              %strong.font-18= t(:order_total)
            %td
              %strong.font-18= @cart.formatted_total
        .btn.btn-default.mb-20.visible-xs-inline-block= link_to(t(:checkout), orders_path, method: :post)
.btn.btn-default.mb-20.hidden-xs.center-block= link_to(t(:checkout), orders_path, method: :post, class: '')